@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
    @apply h-full overflow-hidden;

    -webkit-tap-highlight-color: transparent;
}

@layer components {
    .border-default {
        @apply border-2 border-surface-900;
    }

    .border-bottom {
        @apply rounded-b-xl border-2 border-t-0 border-surface-900;
    }
}
